{
  "name": "@kartverket/geonorge-web-components",
  "version": "4.0.2",
  "description": "Geonorge Web Components",
  "keywords": [
    "Web Components, Custom Elements"
  ],
  "author": "Kartverket",
  "license": "GPL-3.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/kartverket/Geonorge.WebComponents.git",
    "directory": "packages/geonorge-web-components"
  },
  "scripts": {
    "start": "webpack serve --port 9000 --host 0.0.0.0 --progress --profile --mode development",
    "build": "npm run clean:lib && webpack --config webpack.config.js --mode production",
    "release": "npm run build && npm run copy-files && npm run clean-package && npm publish ./tmp && npm run clean:tmp",
    "copy-files": "copyfiles -f \"./lib/**/*\" \"./package.json\" tmp",
    "clean-package": "json -I -f ./tmp/package.json -e \"delete this.devDependencies; delete this.scripts\"",
    "clean:lib": "shx rm -rf lib",
    "clean:tmp": "shx rm -rf tmp",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs",
    "test-release": "npm run build && npm run copy-files"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/web-components": "^6.5.16",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.3.0",
    "css-loader": "^6.7.1",
    "file-loader": "^6.1.0",
    "html-loader": "^5.0.0",
    "json": "^11.0.0",
    "lit-html": "^3.1.2",
    "mini-css-extract-plugin": "^2.9.2",
    "raw-loader": "^4.0.1",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "shx": "^0.3.2",
    "source-map-loader": "^5.0.0",
    "storybook-addon-sass-postcss": "^0.2.0",
    "style-loader": "^3.3.1",
    "super-custom-elements": "0.0.2",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^9.2.2",
    "typescript": "^5.4.2",
    "webpack": "^5.1.3",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^5.0.3"
  },
  "packageManager": "yarn@4.9.1"
}
